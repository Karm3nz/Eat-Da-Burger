{{!-- Eat-Da-Burger! --}}
<div class="container header">
    <h1>Eat-Da-Burger!</h1>
    <img src="assets/img/burger.png" class="image">
</div>

{{!-- Two columns for burgers --}}
<div class="container mainContent">
    <div class="row">
        {{!-- Column One --}}
        <div class="col">
            <h2>Burgers Remaining!</h2>
                <div class="columnOne">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <ul>
                        {{id}}) {{burger_name}}
                    <button class="devour-burger" data-id="{{id}}">Devour It!</button>
                    </ul>
                    {{/unless}}
                    {{/each}}
                </div>
        </div>

        {{!-- Column Two --}}
        <div class="col">
            <h2>Burgers Devoured!</h2>

            <div class="columnTwo">
                {{#each burgers}}
                {{#if devoured}}    
                    <ul>
                      {{id}}) {{burger_name}} 
                    </ul>              
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>


{{!-- Text input --}}

{{!-- Submit Button --}}

<form id="create-form">
    <div class="form-group">
        <input type="text" id="bu" name="name">
        <button type="submit" >Add Burger!</button>
    </div>
</form>
